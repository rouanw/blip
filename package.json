{
  "name": "blip",
  "version": "0.1.0",
  "description": "track your learning visually",
  "main": "app/index.js",
  "devDependencies": {
    "angular-mocks": "^1.4.7",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.14",
    "karma-jasmine": "^0.3.6",
    "karma-ng-html2js-preprocessor": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.1",
    "phantomjs": "^1.9.18",
    "rimraf": "^2.4.3"
  },
  "scripts": {
    "test": "karma start --singleRun",
    "karma": "karma start",
    "prepare": "npm install && bower install",
    "prestart": "npm run prepare",
    "start": "electron app",
    "clean": "rimraf release && rimraf installers",
    "mac": "electron-packager . Blip --platform=darwin --arch=x64 --version=0.31.2 --out=release --ignore=node_modules --icon=app/assets/images/blip_icon.icns",
    "windows": "electron-packager . Blip --platform=win32 --arch=x64 --version=0.31.2 --out=release --ignore=node_modules",
    "linux": "electron-packager . Blip --platform=linux --arch=x64 --version=0.31.2 --out=release --ignore=node_modules",
    "prepackage": "npm run clean && npm run prepare",
    "package": "npm run mac && npm run windows && npm run linux",
    "preinstaller": "npm run package",
    "installer": "electron-builder release/Blip-darwin-x64/Blip.app --platform=osx --out=installers --config=config.json"
  },
  "license": "MIT"
}
